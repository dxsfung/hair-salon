<h1 class="text-center">Clients</h1>

<div class="container-fluid">
<li class="list-group-item">
    <img class="center-block img-responsive" style="max-height:300px" src="https://media.giphy.com/media/3orieYy0PsC9MhL0Oc/giphy.gif
"></li>
</div>

<h3 style="text-align: center">Here are all the Clients we have:</h3>

  <ol style="text-aline: center">
    <% @clients.each do |client| %>
      <div class="row text-center">

        <% client.name %> - Stylist: 

          <form style="display: inline-block" action="/stylist/<%= stylist.id %>">
              <button class="btn btn-success btn-cons center-block">
                  <%= client.name %>
              </button>
          </form>
          <form style="display: inline-block" action="/del_stylist/<%= stylist.id %>">
              <button class="btn btn-danger btn-cons center-block">
                  delete
              </button>
          </form>
      </div>
    <% end %>
  <ol>

<form action="/add_stylist">
    <button class="btn btn-info col-sm-4">
        Add New Stylist
    </button>
</form>

<form action="/">
    <button class="btn btn-primary col-sm-4">
        Return to Main Page
    </button>
</form>
